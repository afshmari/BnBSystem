{{template "base" .}}
{{define "title"}}
    about page
{{end}}
{{define "content"}}


<div class="container">

    <div class="row">
        <div class="col-md-12">
            <div class = "col-md-6">
                <h1 class="mt-5 text-center">Search for availability</h1>

                <form action="" method="GET" novalidate class="needs-validation">
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group row" id="reservation-dates">
                                <div class="col">
                                    <input required class="form-control" type="text" name="start" placeholder="Check-in Date">
                                </div>
                                <div class="col">
                                    <input required class="form-control" type="text" name="end" placeholder="Check-out Date">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Search Availability</button>
                </form>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p id="Paragraph">A paragraph</p>
        </div>
        <p>
            <button id="colorButton" class="btn btn-outline-secondary">Click me</button>
        </p>
    </div>

    {{end}}
